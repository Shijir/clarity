{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "module": "umd",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "removeComments": false,
    "noImplicitAny": true,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "outDir": "dist/clarity-angular"
  },
  "include": [
    "./tmp/**/*.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot-compiled"
  }
}
