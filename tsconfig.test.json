{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "module": "umd",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "removeComments": false,
    "noImplicitAny": true,
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "include": [
    "./aot-compiled/tmp/**/*.ngfactory.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "debug": true,
    "trace": true
  }
}
