{
  "name": "clarity",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test clr-angular --watch false --source-map=false",
    "format": "prettier --list-different './**/*.{js,json,md,ts,scss}'",
    "format:fix": "pretty-quick --staged",
    "format:file": "prettier --write .",
    "license:fix": "node scripts/update-license",
    "lint": "npm-run-all lint:ts lint:styles",
    "prelint:ts": "npm link ./eslint/eslint-plugin-clarity",
    "lint:ts": "eslint -c .eslintrc.js \"projects/clr-angular/**/*.ts\"",
    "lint:ts:fix": "eslint --fix -c .eslintrc.js \"projects/clr-angular/**/*.ts\"",
    "lint:styles": "stylelint \"src/**/*.scss\" \"projects/**/*.scss\"",
    "lint:styles:fix": "stylelint --fix \"src/**/*.scss\" \"projects/**/*.scss\"",
    "clean:build": "rm -rf dist",
    "build:website": "ng build website",
    "build:angular": "ng build clr-angular",
    "build:dev": "ng build dev",
    "build:ui:css": "sass --precision=8 projects/ui/src/main.scss ./dist/clr-ui/clr-ui.css; sass --precision=8 projects/ui/src/dark-theme.scss ./dist/clr-ui/clr-ui-dark.css",
    "build:ui:prefix": "postcss --use autoprefixer -o ./dist/clr-ui/clr-ui.css ./dist/clr-ui/clr-ui.css; postcss --use autoprefixer -o ./dist/clr-ui/clr-ui-dark.css ./dist/clr-ui/clr-ui-dark.css",
    "build:ui:optimize": "csso -i ./dist/clr-ui/clr-ui.css -o ./dist/clr-ui/clr-ui.min.css -s file --no-restructure; csso -i ./dist/clr-ui/clr-ui-dark.css -o ./dist/clr-ui/clr-ui-dark.min.css -s file --no-restructure",
    "build:ui:src": "cpy '**/*.scss' '../../dist/clr-ui/' --cwd=./projects/clr-angular/ --parents",
    "build:ui:package": "cpy ./projects/ui/npm.json ./projects/ui/README.md ./dist/clr-ui/; mv ./dist/clr-ui/npm.json ./dist/clr-ui/package.json;",
    "build:ui": "npm-run-all build:ui:css build:ui:prefix build:ui:optimize build:ui:src build:ui:package",
    "build:projects": "npm-run-all clean:build build:angular build:ui build:website build:dev",
    "build:ci": "npm-run-all format lint test build:projects"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.0.0",
    "@angular/common": "~12.0.0",
    "@angular/compiler": "~12.0.0",
    "@angular/core": "~12.0.0",
    "@angular/forms": "~12.0.0",
    "@angular/platform-browser": "~12.0.0",
    "@angular/platform-browser-dynamic": "~12.0.0",
    "@angular/router": "~12.0.0",
    "@cds/angular": "^5.1.1",
    "@cds/core": "^5.1.1",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.0",
    "@angular/cli": "~12.0.0",
    "@angular/compiler-cli": "~12.0.0",
    "@clr/icons": "^5.1.1",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@sentry/browser": "^6.2.5",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.20.7",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "@webcomponents/custom-elements": "^1.4.3",
    "chokidar-cli": "2.1.0",
    "codelyzer": "^6.0.0",
    "cpy-cli": "^3.1.0",
    "csso-cli": "^3.0.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-jasmine": "4.1.0",
    "eslint-plugin-unused-imports": "0.1.3",
    "husky": "1.3.1",
    "jasmine-core": "~3.6.0",
    "jasmine-expect": "^5.0.0",
    "jasmine-spec-reporter": "~5.0.0",
    "jump.js": "^1.0.2",
    "karma": "~6.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-notify-reporter": "^1.3.0",
    "karma-parallel": "^0.3.1",
    "netlify-lambda": "^2.0.6",
    "ng-packagr": "^12.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.15",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "prismjs": "^1.23.0",
    "protractor": "~7.0.0",
    "sass": "^1.26.3",
    "stylelint": "10.0.1",
    "stylelint-config-recommended": "2.2.0",
    "stylelint-declaration-use-variable": "1.7.0",
    "stylelint-no-px": "0.12.1",
    "stylelint-scss": "3.9.2",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format:fix && yarn license:fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
